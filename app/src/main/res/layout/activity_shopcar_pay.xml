<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/view_simple_topbar"/>
    <android.support.v4.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/black_f7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_20"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/black_66"
                android:text="收货信息"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/ll_SignforName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:textSize="@dimen/textsize_14"
                        android:textColor="@color/black_66"
                        android:text="收货人："/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:textSize="@dimen/textsize_14"
                        android:textColor="@color/black_66"
                        android:text="XX\t\t*********"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_SignforAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_SignforName"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:textSize="@dimen/textsize_14"
                        android:textColor="@color/black_66"
                        android:text="收货地址："/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:textSize="@dimen/textsize_14"
                        android:textColor="@color/black_66"
                        android:text="XX\t\t*********"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@mipmap/home_top_arrows"
                    android:contentDescription="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_20"
                android:textSize="@dimen/textsize_14"
                android:textColor="@color/black_66"
                android:text="商品信息"/>
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/margin_10">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_ShopcarSignfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </android.support.v4.widget.NestedScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_20"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_66"
                    android:text="积分抵現"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/margin_20"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_99"
                    android:text="暂无可用积分"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_20"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_66"
                    android:text="发票"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/margin_5"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_99"
                    android:text="不需要发票"/>
                <ImageView
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@mipmap/home_top_arrows"
                    android:contentDescription="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/margin_20"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_66"
                    android:text="备注："/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/margin_20"
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/black_99"
                    android:text="选填，填写留言备注（限100字）"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/line_c3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ShopcarPayTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_33"
                android:textSize="@dimen/textsize_14"
                android:text="合计："/>
            <TextView
                android:id="@+id/tv_ShopcarPayTotalMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_ShopcarPayTotal"
                android:textColor="@color/orange"
                android:textSize="@dimen/textsize_14"
                android:text="￥XX.XX"/>
            <TextView
                android:id="@+id/tv_ShopcarPayCarriageMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_below="@id/tv_ShopcarPayTotal"
                android:textColor="@color/black_66"
                android:textSize="@dimen/textsize_14"
                android:text="(含运费￥0.00)"/>
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="结算"/>
    </LinearLayout>
</LinearLayout>
