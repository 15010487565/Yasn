<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_Auditing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/height_20">

            <TextView
                style="@style/text_invoicespecialauditing_left"
                android:text="单位名称：" />

            <TextView
                android:id="@+id/tv_InvoicespTitle"
                style="@style/text_invoicespecialauditing_right"
                android:text="****" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/height_20">

            <TextView
                style="@style/text_invoicespecialauditing_left"
                android:text="纳税识别号：" />

            <TextView
                android:id="@+id/tv_InvoicespNum"
                style="@style/text_invoicespecialauditing_right"
                android:text="****" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/height_20">

            <TextView

                style="@style/text_invoicespecialauditing_left"
                android:text="注册地址：" />

            <TextView
                android:id="@+id/tv_InvoicespAddress"
                style="@style/text_invoicespecialauditing_right"
                android:text="****" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/height_20">

            <TextView

                style="@style/text_invoicespecialauditing_left"
                android:text="注册电话：" />

            <TextView
                android:id="@+id/tv_InvoicespMobile"
                style="@style/text_invoicespecialauditing_right"
                android:text="****" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/height_20">

            <TextView

                style="@style/text_invoicespecialauditing_left"
                android:text="开户银行：" />

            <TextView
                android:id="@+id/tv_InvoicespBank"
                style="@style/text_invoicespecialauditing_right"
                android:text="****" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/height_20">

            <TextView

                style="@style/text_invoicespecialauditing_left"
                android:text="银行账户：" />

            <TextView
                android:id="@+id/tv_InvoicespBankNum"
                style="@style/text_invoicespecialauditing_right"
                android:text="****" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Audit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/white">

        <LinearLayout style="@style/ll_invoicespecialaudit_one">

            <TextView
                android:id="@+id/tv_InvoicespAuditTitle_left"
                android:text="*单位名称："
                style="@style/text_invoicespecialaudit_left" />

            <EditText
                android:id="@+id/tv_InvoicespAuditTitle_right"
                android:hint="请填写单位名称"
                style="@style/text_invoicespecialaudit_right" />
        </LinearLayout>

        <LinearLayout style="@style/ll_invoicespecialaudit_two">

            <TextView
                android:id="@+id/tv_InvoicespAuditNum_left"
                android:text="*纳税识别号："
                style="@style/text_invoicespecialaudit_left" />

            <EditText
                android:id="@+id/tv_InvoicespAuditNum_right"
                style="@style/text_invoicespecialaudit_right"
                android:hint="请填写纳税识别号" />
        </LinearLayout>

        <LinearLayout style="@style/ll_invoicespecialaudit_two">

            <TextView
                android:id="@+id/tv_InvoicespAuditAddress_left"
                android:text="*注册地址："
                style="@style/text_invoicespecialaudit_left" />

            <EditText
                android:id="@+id/tv_InvoicespAuditAddress_right"
                style="@style/text_invoicespecialaudit_right"
                android:hint="请填写注册地址" />
        </LinearLayout>

        <LinearLayout style="@style/ll_invoicespecialaudit_two">

            <TextView
                android:id="@+id/tv_InvoicespAuditMobile_left"
                android:text="*注册电话："
                style="@style/text_invoicespecialaudit_left" />

            <EditText
                android:id="@+id/tv_InvoicespAuditMobile_right"
                style="@style/text_invoicespecialaudit_right"
                android:inputType="phone"
                android:hint="请填写注册电话" />
        </LinearLayout>

        <LinearLayout style="@style/ll_invoicespecialaudit_two">

            <TextView
                android:id="@+id/tv_InvoicespAuditBank_left"
                android:text="*开户银行："
                style="@style/text_invoicespecialaudit_left" />

            <EditText
                android:id="@+id/tv_InvoicespAuditBank_right"
                style="@style/text_invoicespecialaudit_right"
                android:hint="请填写开户银行" />
        </LinearLayout>

        <LinearLayout style="@style/ll_invoicespecialaudit_two">

            <TextView
                android:id="@+id/tv_InvoicespauditBankNum_left"
                android:text="*银行账户："
                style="@style/text_invoicespecialaudit_left" />

            <EditText
                android:id="@+id/tv_InvoicespauditBankNum_right"
                style="@style/text_invoicespecialaudit_right"
                android:hint="请填写银行账户" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>