<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1dp"
    android:background="@color/white"
    android:gravity="center"
    android:minHeight="90dp"
    android:orientation="horizontal"
    android:padding="@dimen/margin_15">

    <ImageView
        android:id="@+id/highprofit_image"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:src="@mipmap/qqfriends" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_5"
                android:paddingRight="@dimen/margin_10">
                <include
                    layout="@layout/inciude_listtop_name"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/highprofit_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="活动折扣XXXX"
                android:textColor="@color/black_99"
                android:textSize="@dimen/textsize_16" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--<TextView-->
                    <!--android:id="@+id/home_spec"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/margin_5"-->
                    <!--android:ellipsize="end"-->
                    <!--android:singleLine="true"-->
                    <!--android:text="颜色XX尺寸XX"-->
                    <!--android:textColor="@color/black_99"-->
                    <!--android:textSize="@dimen/textsize_16" />-->
                <LinearLayout
                    android:id="@+id/linearmoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/highprofit_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="￥XX.XX"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/textsize_18" />
                    <TextView
                        android:id="@+id/highprofit_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="XXXX"
                        android:textColor="@color/black_99"
                        android:textSize="@dimen/textsize_16" />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/linearmoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5">
                    <include
                        layout="@layout/threelable" />
                    </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>