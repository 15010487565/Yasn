<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1dp"
    android:background="@color/white"
    android:gravity="center"
    android:minHeight="90dp"
    android:orientation="horizontal"
    android:padding="@dimen/margin_15">
    <!--<RelativeLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->
        <ImageView
            android:id="@+id/titleimage"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:src="@mipmap/errorimage" />
        <!--<ImageView-->
            <!--android:id="@+id/iv_shroud"-->
            <!--android:layout_width="@dimen/image_size"-->
            <!--android:layout_height="@dimen/image_size"-->
            <!--android:scaleType="fitXY"-->
            <!--android:background="@mipmap/soldout" />-->
    <!--</RelativeLayout>-->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10">
                <include
                    layout="@layout/inciude_listtop_name"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/search_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="活动折扣XXXX"
                android:textColor="@color/black_99"
                android:textSize="@dimen/textsize_12" />

            <LinearLayout
                android:id="@+id/linearmoney"
                android:paddingLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_3"
                android:paddingBottom="@dimen/margin_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥XX.XX"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/search_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="XXXX"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buyingspreeLinear"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_2"
                android:paddingBottom="@dimen/margin_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF4E0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抢购价"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_12" />

                <TextView
                    android:id="@+id/buyingspreeMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:text="￥XXXX"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5">

                <include layout="@layout/threelable" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>