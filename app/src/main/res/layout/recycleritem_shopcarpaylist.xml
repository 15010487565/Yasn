<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="90dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_10"
    android:paddingRight="@dimen/margin_10"
    android:paddingTop="@dimen/margin_10">

    <ImageView
        android:id="@+id/iv_ShopCarPayImage"
        android:layout_width="@dimen/image_sizeshopcar"
        android:layout_height="@dimen/image_sizeshopcar"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ShopCarPayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:text="XXXXXXXXXXXXX"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ShopCarPayNum"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_15"
                android:text="￥0.00*1"
                android:textColor="@color/black_66" />

            <TextView
                android:id="@+id/tv_ShopCarPayNeedMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_15"
                android:text="￥0.00"
                android:textColor="@color/orange" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>