<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_f7"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_90"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/top_bar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15">

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="@dimen/height_45"
            android:layout_height="@dimen/height_45"
            android:background="@mipmap/unlogin" />

        <FrameLayout
            android:id="@+id/home_topinfomssage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/notlogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/text_orange_black"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_3"
                    android:text="登录"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:id="@+id/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:background="@drawable/text_orange_black"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_3"
                    android:text="注册"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_16" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/home_infomessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/home_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="1234567890"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_18" />

                <LinearLayout
                    android:id="@+id/account_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/home_account"
                    android:layout_alignTop="@id/home_account"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@id/home_account"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_black66"
                        android:gravity="center"
                        android:lines="1"
                        android:paddingBottom="@dimen/margin_1"
                        android:paddingLeft="@dimen/margin_5"
                        android:paddingRight="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_1"
                        android:text="等级X星"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/whiteTopText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/account_grade"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/undredge_YsenHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/account_grade"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_toRightOf="@id/whiteTopText"
                    android:layout_alignBaseline="@id/whiteTopText"
                    android:background="@drawable/text_orange_black"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_3"
                    android:text=""
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/okdredge_YsenHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/account_grade"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_toRightOf="@id/whiteTopText"
                    android:layout_alignBaseline="@id/whiteTopText"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_3"
                    android:singleLine="true"
                    android:text="会员有效期XXXX-XX-XX"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_16" />
            </RelativeLayout>
        </FrameLayout>


        <LinearLayout
            android:id="@+id/home_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height_25"
                android:layout_height="@dimen/height_25"
                android:background="@mipmap/collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:text="@string/collect"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height_25"
                android:layout_height="@dimen/height_25"
                android:background="@mipmap/service_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3"
                android:text="客服"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_16" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">

        <LinearLayout
            android:id="@+id/shoplist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shoplist"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/text_orange_white"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_3"
                    android:text="点击查看"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_16" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/height_45"
                android:layout_height="@dimen/height_45"
                android:background="@mipmap/inventory" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/yasnbang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雅森帮"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/text_orange_white"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_3"
                    android:text="点击查看"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_16" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/height_45"
                android:layout_height="@dimen/height_45"
                android:background="@mipmap/yasnbang" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderStateLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:paddingBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:text="订单\n状态"
            android:textColor="@color/black_66"
            android:textSize="@dimen/textsize_16" />

        <View
            android:layout_width="@dimen/margin_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/line_c3" />

        <ImageView
            android:id="@+id/orderImage"
            android:layout_width="@dimen/height_35"
            android:layout_height="@dimen/height_35"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/express_stateimage"
                    android:layout_width="@dimen/margin_15"
                    android:layout_height="@dimen/margin_15"
                    android:background="@mipmap/daishouhuo" />

                <TextView
                    android:id="@+id/express_stateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:text="XXX"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize_14" />

                <TextView
                    android:id="@+id/orderHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_3"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="感谢您使用XXXX"
                    android:textColor="@color/black_66"
                    android:textSize="@dimen/textsize_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_marginTop="@dimen/margin_3"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="XXXXXXXXXXXXXX"
                android:textColor="@color/black_66"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/func_right"
            android:layout_width="@dimen/margin_15"
            android:layout_height="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@mipmap/home_top_arrows"
            android:contentDescription="@null"
            android:duplicateParentState="true" />
    </LinearLayout>

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/home_convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_170"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/line_c3"
        app:canLoop="true">
        <!--app:canLoop="true" //控制循环与否-->
    </com.bigkoo.convenientbanner.ConvenientBanner>

</LinearLayout>