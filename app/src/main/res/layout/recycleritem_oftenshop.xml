<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_1dp"
    android:background="@color/white"
    android:gravity="center"
    android:minHeight="90dp"
    android:orientation="horizontal"
    android:padding="@dimen/margin_15">

    <ImageView
        android:id="@+id/image_oftenshop"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/qqfriends" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10">
                <include
                    layout="@layout/inciude_listtop_name"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/action_oftenshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="活动折扣XXXX"
                android:textColor="@color/black_99"
                android:layout_marginLeft="@dimen/margin_10"
                android:textSize="@dimen/textsize_16" />
            <RelativeLayout
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/spec_oftenshop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="颜色XX尺寸XX"
                    android:textColor="@color/black_99"
                    android:textSize="@dimen/textsize_16" />
                <LinearLayout
                    android:id="@+id/ll_HomeMoreMoney"
                    android:layout_below="@id/spec_oftenshop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money_oftenshop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="￥XX.XX"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/textsize_18" />
                    <TextView
                        android:id="@+id/count_oftenshop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="XXXX"
                        android:textColor="@color/black_99"
                        android:textSize="@dimen/textsize_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/ll_HomeMoreMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5">
                    <include
                        layout="@layout/threelable" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/addshopcar"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/shoplistcar"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>